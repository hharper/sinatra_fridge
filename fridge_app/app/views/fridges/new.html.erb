<h2> Create a new fridge <h2>



<%= form_for @fridge do |f| %>

<%= f.label :brand %>
<%= f.text_field :brand %>
<%= f.label :location %>
<%= f.text_field :location %>
<%= f.label :size %>
<%= f.text_field :size %>

<%= f.submit %>

<%end %>


<% if @fridge.errors.any? %>
<ul>
<% @fridge.errors.full_messages.each do |error| %>
<li> <%= error %></li>
<%end%>
</ul>
<% end %>
